<resources>

    <!-- Base application theme. -->
    <style name="WAppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
       <!-- 状态栏的颜色-->
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/actionBar</item>
    </style>

    <style name="w_theme" parent="WAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
